            //                 location.reload();
            //             } else {
            //                 // Manejar errores
            //                 alert('Hubo un error al procesar la solicitud.');
            //             }
            //         },
            //         error: function () {
            //             alert('Hubo un error al procesar la solicitud.');
            //         }
            // Manejar envío de formularios
            $(document).on('submit', '#formEliminar', function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method'),
                    data: form.serialize(),
                    success: function (result) {
                        if (result.success) {
                            $('.modal').modal('hide');
                            location.reload();
                        } else {
                            // Manejar errores
                            alert('Hubo un error al procesar la solicitud.');
                        }
                    },
                    error: function () {
                        alert('Hubo un error al procesar la solicitud.');
                    }
                });
            });
        });
    </script>
}

